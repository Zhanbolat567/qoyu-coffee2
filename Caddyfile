qoyucoffee.kz, www.qoyucoffee.kz {
    encode gzip zstd

    tls {
        issuer acme {
            # строку 'ca https://acme-staging...' УДАЛИЛИ
            email admin@qoyucoffee.kz
        }
    }

    @api path /api/*
    reverse_proxy backend:8000

    @web not path /api/*
    reverse_proxy web:80
}
