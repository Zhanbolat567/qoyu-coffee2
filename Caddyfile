{
    # Email для Let's Encrypt
    email qoyucoffee@gmail.com

    # ВРЕМЕННО используем staging-CA, чтобы не упираться в лимиты
    acme_ca https://acme-staging-v02.api.letsencrypt.org/directory
}

qoyucoffee.kz, www.qoyucoffee.kz {
    encode gzip zstd

    @api path /api/*
    reverse_proxy qoyu-backend:8000

    @web not path /api/*
    reverse_proxy qoyu-web:80
}

