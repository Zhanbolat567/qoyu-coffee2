# ----- Сайт -----
qoyucoffee.kz, www.qoyucoffee.kz {
    encode gzip zstd

    # Явно задаём единственного эмитента: ACME (Let's Encrypt) и STAGING-CA
    tls {
        issuer acme {
            ca https://acme-staging-v02.api.letsencrypt.org/directory
            email qoyucoffee@gmail.com
        }
    }

    @api path /api/*
    reverse_proxy backend:8000

    @web not path /api/*
    reverse_proxy web:80
}

